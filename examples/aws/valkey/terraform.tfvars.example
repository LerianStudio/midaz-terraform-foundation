# Common Variables
name        = "midaz-foundation"
environment = "dev"

# ElastiCache Configuration
vpc_id        = "vpc-12345678" # Replace with your VPC ID
node_type     = "cache.t3.micro"
engine_version = "7.0"
family        = "redis7"
parameters = [
  {
    name  = "maxmemory-policy"
    value = "allkeys-lru"
  }
]

# DNS Configuration
create_dns_record = true
route53_zone_id   = "" # Add your Route53 zone ID
dns_name         = "redis"
dns_zone_name    = "midaz.internal"

# Additional Tags
additional_tags = {
  "ManagedBy" = "terraform"
  "Project"   = "midaz"
  "Owner"     = "devops"
}
